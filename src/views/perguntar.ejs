<%- include ('partials/header.ejs') %>

  <body class="d-flex flex-column min-vh-100">
    <%- include ('partials/navbar.ejs') %>
      <div class="container">

        <% if (errors) { %>
          <div class="mostrar-erros mt-2  ">
            <% errors.erros.forEach(erro=> { contador += 50%>
              <div class="alert alert-danger mt-2 mb-0" role="alert" <% if (contador%2==0) { %>
                data-aos="fade-left"
                <% } %>
                  data-aos="fade-up"
                  data-aos-delay="<%= contador %>">
                    <%= erro %>
              </div>
              <% }) %>
          </div>
          <% } %>


            <div class="card mt-3" id="formulario-pergunta" data-aos="fade-up" data-aos-delay="12">
              <!-- Card Header -->
              <div class="card-header">
                <h3>Realizar pergunta</h3>
              </div>
              <!-- Card Body-->
              <div class="card-body">
                <!-- Formulário de pergunta-->
                <form method="POST" action="/api/pergunta">
                  <label>Título</label>
                  <input type="text" name="titulo" placeholder="Título" class="form-control">
                  <br>
                  <label>Descrição</label>
                  <textarea name="descricao" placeholder="Descreva sua pergunta aqui" class="form-control"></textarea>
                  <br>
                  <button class="btn btn-success">Concluir</button>
                </form>
              </div>
            </div>
      </div>



      <%- include ('partials/rodape.ejs') %>


  </body>
  <%- include ('partials/footer.ejs') %>