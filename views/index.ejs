<%- include ('partials/header.ejs') %>

    <body>
        <%- include ('partials/navbar.ejs') %>

            <div class="container">
                <div class="header-perguntas">

                    <br>
                    <div class="title-btn d-flex justify-content-between align-items-center">
                        <h1>Perguntas</h1>
                        <a href="/perguntar" class="btn btn-info">Perguntar</a>

                    </div>
                    <hr>
                </div>

                <% perguntas.forEach(pergunta=> { %>
                    <br>
                    <div class="card">
                        <div class="card-body">
                            <h3>
                                <%= pergunta.titulo %>
                            </h3>
                        </div>
                        <div class="card-footer">
                            <a href="/pergunta/<%= pergunta.id %>"><button class="btn btn-dark">Responder</button></a>

                        </div>
                    </div>
                    <% }) %>
            </div>

    </body>

    <%- include ('partials/footer.ejs') %>