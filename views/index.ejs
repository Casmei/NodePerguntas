<%- include ('partials/header.ejs') %>

    <body>
        <%- include ('partials/navbar.ejs') %>

            <div class="container">
                <div class="header-perguntas">

                    <br>
                    <div class="title-btn d-flex justify-content-between align-items-center">
                        <h1 data-aos="fade">Perguntas bnbbbbb</h1>
                        <a data-aos="fade" href="/perguntar" class="btn btn-info">Perguntar</a>

                    </div>
                    <hr>
                </div>

                <% perguntas.forEach(pergunta=> { contador += 50 %>
                    <br>
                    <div class="card" data-aos-delay="<%= contador %>" <% if (pergunta.id) { %>
                        data-aos="fade"
                        <% } %> >
                            <div class="card-body">
                                <h3>
                                    <%= pergunta.titulo %>
                                </h3>
                                <%= pergunta.descricao %>
                            </div>
                            <div class="card-footer d-flex justify-content-between  align-items-center">
                                <a href="/pergunta/<%= pergunta.id %>"><button
                                        class="btn btn-dark">Responder</button></a>
                                <p>
                                    <%= new Date(pergunta.createdAt).toLocaleDateString('pt-BR', { day: '2-digit' ,
                                        month: 'numeric' , year: 'numeric' }) %>
                                </p>
                            </div>
                    </div>
                    <% }) %>
            </div>
    </body>

    <%- include ('partials/footer.ejs') %>